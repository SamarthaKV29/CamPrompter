<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.CamPrompter" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="StatusBarIcons">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:tint">@color/white</item>
        <item name="android:layout_marginHorizontal">4dp</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.CamPrompter" parent="Base.Theme.CamPrompter">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_light_green_A700</item>
        <item name="colorPrimaryVariant">@color/md_light_green_700</item>
        <item name="colorOnPrimary">@color/md_green_900</item>
        <item name="actionMenuTextColor">?attr/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialIconButtonFilledStyle">@style/SettingsOptionBtn</item>
    </style>

    <style name="SettingsOptionBtn" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="iconTint">@color/md_grey_800</item>
    </style>

</resources>