<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/md_grey_800"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="4">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/toggleAudioVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:scaleX="1.2"
            android:scaleY="1.2"
            app:thumbIcon="@drawable/av_toggle_sw_icon"
            app:thumbIconTint="?attr/colorOnPrimary"
            app:thumbTint="?attr/colorPrimary"
            app:trackDecorationTint="?attr/colorPrimaryVariant"
            app:trackTint="@color/md_indigo_300" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/previewBtn"
            style="@style/Widget.Material3.Button.IconButton.Filled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/cd_gallery"
            android:text=""
            android:textOff=""
            android:textOn=""
            app:icon="@drawable/baseline_video_library_64" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/captureBtn"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_centerInParent="true"
            android:background="@drawable/capture"
            android:backgroundTint="@color/md_red_400"
            android:contentDescription="@string/cd_take_video"
            android:text=""
            android:textOff=""
            android:textOn="" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/settingsBtn"
            style="@style/Widget.Material3.Button.IconButton.Filled"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/cd_open_app_settings"
            app:icon="@drawable/baseline_settings_24" />

    </RelativeLayout>


</androidx.appcompat.widget.LinearLayoutCompat>